include ../selectfield/selectfield
mixin course-fee
  .course-fee
    .course-fee__text Xem học phí khóa học
    -
      const data = [
        {
          label: 'Chọn Khoa',
          value: '0đ',
          selected: true,
          disabled: false,
        },
        {
          label: 'Khoa xã hội & Nhân Văn',
          value: '10.000.000đ',
          selected: false,
          disabled: false,
        },
        {
          label: 'Khoa giáo dục thể chất',
          value: '22.000.000đ',
          selected: false,
          disabled: false
        },
        {
          label: 'Khoa tin học',
          value: '13.780.000đ',
          selected: false,
          disabled: false
        }
      ]
    +selectfield({
      data
    })
    .course-fee__price
    .course-fee__note *Mức học phí cho 04 năm học và đã bao gồm các khoản phụ phí
